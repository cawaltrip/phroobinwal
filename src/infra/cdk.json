{
  "app": "npx ts-node --prefer-ts-exts bin/app.ts",
  "watch": {
    "include": [
      "**"
    ],
    "exclude": [
      "README.md",
      "cdk.json",
      "**/*.d.ts",
      "**/*.js",
      "tsconfig.json",
      "package.json",
      "package-lock.json",
      "yarn.lock",
      "node_modules",
      "test"
    ]
  },
  "context": {
    "domain-name": "phroobinwal.design",
    "website-path": "../website/public",
    "aws_profile": "phroobinwal-publish",
    "@aws-cdk/core:checkSecretUsage": true,
    "@aws-cdk/core:target-partitions": [
      "aws",
      "aws-cn"
    ],
    "@aws-cdk/aws-iam:minimizePolicies": true
  }
}
